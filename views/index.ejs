<%- include('partials/header', { title: 'Guia Perguntas' }) %>
    <body>
        <%- include('partials/navbar') %>
            <div class="container">
                <hr>
                <h1>Perguntas</h1>         
                <hr>
                <a href="/perguntar" class="btn btn-primary">Perguntar</a>
                <hr>
                <% perguntas.forEach(element=> { %>
                    <br>
                    <div class="card">
                        <div class="card-body">
                            <h3><%- element.titulo %></h3>
                        </div>
                        <div class="card-footer">
                            <a class="btn btn-primary" href="/pergunta/<%= element.id %>"><button class="btn btn-primary">Responder</button></a>
                      </div>
                    </div>
                    <% }); %>

            </div>

    </body>
    <%- include('partials/footer') %>