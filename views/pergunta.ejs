<%- include('partials/header', { title: 'Guia Perguntas' }) %>
<body>
    <%- include('partials/navbar') %>
        <div class="container">

            <hr>
            <h1><%= pergunta.titulo %></h1>
            <p><%= pergunta.description  %></p>
            <hr>
            <form action="/responder" method="POST">
                <h3>Responda</h3>
                <label for="">Resposta</label>
                <textarea placeholder="Digite sua resposta aqui" class="form-control" name="corpo"></textarea>
                <br>
                <input name="pergunta" type="hidden" value="<%= pergunta.id %>">
                <button class="btn btn-primary">Responder</button>
            </form>
            <hr>
            <h3>Repostas</h3>
            <hr>
            <% respostas.forEach(element => { %>
                
                <br>
                <div class="card">
                    <div class="card-body">
                        <p><%= element.corpo %></p>
                    </div>
                </div>
                

            <%}); %>
            
        </div>
</body>
<%- include('partials/footer') %>